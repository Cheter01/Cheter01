    var oneDay = 1000 * 60 * 60 * 24;
    var day = Math.floor(diff / oneDay);
    var value = valore
     function valore() {
      if (14 - day < 0) {
      14 - day + 365
      } else {
      14 - day
     }
    var percentuale = value
}
